{
  "name": "simple-component",
  "version": "0.1.0",
  "description": "A demo of creating a react component with webpack, babel, karma, mocha enzyme.",
  "main": "dist/index.js",
  "scripts": {
    "test": "better-npm-run test",
    "compile": "better-npm-run compile"
  },
  "betterScripts": {
    "test": {
      "command": "karma start",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "compile": {
      "command": "webpack --mode production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
